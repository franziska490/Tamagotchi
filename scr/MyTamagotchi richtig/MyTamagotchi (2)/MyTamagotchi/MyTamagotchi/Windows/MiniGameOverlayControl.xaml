<UserControl x:Class="MyTamagotchi.MiniGameOverlayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Grid Background="#AA000000" Visibility="Visible">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="GameText" Text="..." FontSize="24" Foreground="White" Margin="0,0,0,20"/>
            <Image x:Name="ClickImage" Width="150" Height="150" Visibility="Collapsed"
                   MouseLeftButtonDown="ClickImage_MouseLeftButtonDown"/>
        </StackPanel>
    </Grid>
</UserControl>
