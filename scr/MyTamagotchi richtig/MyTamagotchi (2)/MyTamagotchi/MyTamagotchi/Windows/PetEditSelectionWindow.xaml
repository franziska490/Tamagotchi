<Window x:Class="MyTamagotchi.PetEditSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MyTamagotchi"
        Title="Create Tamagotchi" Height="500" Width="400" MinWidth="400" MinHeight="500" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Eingabe -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="*"/>
            <!-- ListBox -->
            <RowDefinition Height="Auto"/>
            <!-- Error -->
        </Grid.RowDefinitions>

        <!-- Eingabefelder -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Name:" FontSize="14"/>
            <TextBox x:Name="NameBox" Height="25" Margin="0,5,0,10"/>

            <TextBlock Text="Hunger in %" FontSize="14"/>
            <TextBox x:Name="HungerRateBox" Height="25" Margin="0,5,0,10"/>

            <TextBlock Text="Energie in %" FontSize="14"/>
            <TextBox x:Name="EnergyRateBox" Height="25" Margin="0,5,0,10"/>

            <TextBlock Text="Stimmung in %" FontSize="14"/>
            <TextBox x:Name="MoodRateBox" Height="25" Margin="0,5,0,10"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button Content="Save" Width="100" Margin="5" Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="100" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>

        <!-- User-Liste -->
        <ListBox x:Name="UserListBox" Grid.Row="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel Margin="5">
                        <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} ({1})">
                                    <Binding Path="Username"/>
                                    <Binding Path="Role"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        <Button Content="X"
                                Width="20" Height="20"
                                DockPanel.Dock="Right"
                                Margin="10,0,0,0"
                                Tag="{Binding}"
                                Click="DeleteUsersButton_Click"
                                Background="#FFD66A6A"
                                Foreground="White"
                                FontWeight="Bold"/>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Error -->
        <TextBlock x:Name="ErrorTextBlock"
                   Grid.Row="3"
                   Foreground="#FFD66A6A"
                   FontSize="12"
                   TextWrapping="Wrap"
                   Margin="0,10,0,0"
                   TextAlignment="Center"/>
    </Grid>
</Window>
