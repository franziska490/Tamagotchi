<Window x:Class="MyTamagotchi.PetEditSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTamagotchi"
        mc:Ignorable="d"
        Title="Create Tamagotchi" Height="500" Width="400" MinWidth="400" MinHeight="500">

    <Grid Margin="20,20,20,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Name -->
            <RowDefinition Height="Auto"/>
            <!-- Hunger -->
            <RowDefinition Height="Auto"/>
            <!-- Energy -->
            <RowDefinition Height="Auto"/>
            <!-- Mood -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="*"/>
            <!-- ListBox -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Error-->
        <TextBlock x:Name="ErrorTextBlock" Foreground="Red" FontSize="14" TextWrapping="Wrap" Margin="46,6,40,58" RenderTransformOrigin="0.5,0.5" Grid.Row="4">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Name:" FontSize="16" Margin="0,0,0,5"/>
            <TextBox Name="NameBox" FontSize="14" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Hunger in %" FontSize="16" Margin="0,0,0,5"/>
            <TextBox Name="HungerRateBox" FontSize="14" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Energie in %" FontSize="16" Margin="0,0,0,5"/>
            <TextBox Name="EnergyRateBox" FontSize="14" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="Stimmung in %" FontSize="16" Margin="0,0,0,5"/>
            <TextBox Name="MoodRateBox" FontSize="14" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
            <Button Content="Save" Width="120" Height="40" Margin="10" FontSize="14" Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="120" Height="40" Margin="10" FontSize="14" Click="CancelButton_Click"/>
        </StackPanel>

        <ListBox Name="UserListBox" Grid.Row="1" Margin="0,0,0,37">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center" FontSize="16">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} ({1})">
                                        <Binding Path="Username"/>
                                        <Binding Path="Role"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                        <Button Content="X" Grid.Column="1" 
                        Width="20" Height="20" Margin="10"
                        Tag="{Binding}" 
                        Click="DeleteUsersButton_Click"
                        Background="Red" Foreground="White" FontWeight="Bold"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


    </Grid>
</Window>
