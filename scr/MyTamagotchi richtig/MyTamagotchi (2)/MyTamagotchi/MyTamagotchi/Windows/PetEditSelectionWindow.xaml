<Window x:Class="MyTamagotchi.PetEditSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MyTamagotchi"
        Title="Create Tamagotchi"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#EAF0F5"
        WindowStyle="None"
        AllowsTransparency="False">

    <Window.Resources>

        <!-- Moderner Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#D3ECFE"/>
            <Setter Property="Foreground" Value="#000"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- Der zentrale Container im "Fenster-Stil" -->
    <Grid>
        <Border Background="#B5C1CF"
                CornerRadius="12"
                Padding="20"
                Width="650"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Eingabe -->
                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="   Name" FontSize="14" Foreground="#333"/>
                    <TextBox x:Name="NameBox"/>

                    <TextBlock Text="% Hunger" FontSize="14" Foreground="#333"/>
                    <TextBox x:Name="HungerRateBox"/>

                    <TextBlock Text="% Energy" FontSize="14" Foreground="#333"/>
                    <TextBox x:Name="EnergyRateBox"/>

                    <TextBlock Text="% Mood" FontSize="14" Foreground="#333"/>
                    <TextBox x:Name="MoodRateBox"/>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <Button Content="Save" Width="100" Click="SaveButton_Click"/>
                    <Button Content="Cancel" Width="100" Background="#F0F0F0" Click="CancelButton_Click"/>
                </StackPanel>

                <!-- Liste -->
                <ListBox x:Name="UserListBox"
                         Grid.Row="2"
                         Background="White"
                         BorderThickness="0"
                         Margin="0,0,0,10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel Margin="5">
                                <TextBlock DockPanel.Dock="Left"
                                           VerticalAlignment="Center"
                                           Foreground="#333"
                                           FontSize="14">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} ({1})">
                                            <Binding Path="Username"/>
                                            <Binding Path="Role"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                                <Button Content="❌"
                                        Width="25" Height="25"
                                        DockPanel.Dock="Right"
                                        Margin="10,0,0,0"
                                        Tag="{Binding}"
                                        Click="DeleteUsersButton_Click"
                                        Background="#FFD66A6A"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        ToolTip="Entfernen"/>
                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Fehleranzeige -->
                <TextBlock x:Name="ErrorTextBlock"
                           Grid.Row="3"
                           Foreground="#FFD66A6A"
                           FontSize="12"
                           TextWrapping="Wrap"
                           Margin="0,10,0,0"
                           TextAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
