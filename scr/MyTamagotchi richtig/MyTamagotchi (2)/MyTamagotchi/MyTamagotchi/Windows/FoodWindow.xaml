<Window x:Class="MyTamagotchi.FoodWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="300" Height="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="Manual"
        Left="40" Top="40">

    <Border Background="#FFB1BFCE" CornerRadius="12" Padding="10" BorderBrush="Gray" BorderThickness="1">
        <WrapPanel x:Name="FoodPanel" Margin="10"/>
    </Border>
</Window>
