<Window x:Class="MyTamagotchi.PetSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Pet"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowState="Maximized"
        Background="#FFB1BFCE">

    <Grid>
        <Rectangle Fill="#FFB1BFCE" />

        <Border Width="800" Padding="40" CornerRadius="18"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Background="#FFB8C5D2" Height="519">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header & Close -->
                    <RowDefinition Height="*"/>
                    <!-- Pet List -->
                    <RowDefinition Height="Auto"/>
                    <!-- Starter Header -->
                    <RowDefinition Height="Auto"/>
                    <!-- Seal Button -->
                    <RowDefinition Height="Auto"/>
                    <!-- Penguin Button -->
                    <RowDefinition Height="Auto"/>
                    <!-- Admin Button -->
                </Grid.RowDefinitions>

                <!-- Close Button -->
                <Button Content="X" Width="40" Height="30" HorizontalAlignment="Right"
                        VerticalAlignment="Top" Click="CancelButton_Click"
                        Background="#FFAC4646" Grid.Row="0" Margin="0,0,0,10"/>

                <!-- Saved Pets Header -->
                <TextBlock Text="Your saved pets :3" FontSize="24" FontWeight="Bold"
                           Margin="10,5,0,5" HorizontalAlignment="Left" Grid.Row="0"/>

                <!-- Pet List -->
                <ListBox Name="PetListBox" Margin="0,12,0,15" SelectionChanged="PetListBox_SelectionChanged" RenderTransformOrigin="0.5,0.5" Grid.Row="1" Background="#FF657392">
                    <ListBox.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="-1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </ListBox.RenderTransform>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding ImageSourcePath}" Width="50" Height="50" Margin="5"/>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left"/>
                                </StackPanel>
                                <Button Content="X" Grid.Column="1" Width="20" Height="20" Margin="10"
                                        Tag="{Binding}" Click="DeleteButton_Click" Foreground="White" FontWeight="Bold" Background="#FFAC4646"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Starter Header -->
                <TextBlock Text="Starter Pet:" FontSize="24" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,10" Grid.Row="2"/>
                <!--Error-->
                <TextBlock x:Name="ErrorTextBlock" Foreground="Red" FontSize="14" TextWrapping="Wrap" Height="27" Margin="307,7,166,8"/>

                <!-- Seal Button -->
                <Button Name="SealButton" Content="Chubby Seal" Height="50" Width="171" Margin="183,29,0,44"
                        HorizontalAlignment="Left" Click="SealButton_Click"
                        FontWeight="Bold" BorderBrush="#FFC8E3FF" Grid.Row="4">
                    <Button.Background>
                        <ImageBrush/>
                    </Button.Background>
                </Button>

                <!-- Penguin Button -->
                <Button Name="PenguinButton" Content="Penguin" Width="165" Margin="391,31,0,44"
                        HorizontalAlignment="Left" Click="PenguinButton_Click"
                        FontWeight="Bold" BorderBrush="#FFC8E3FF" Grid.Row="4">
                    <Button.Background>
                        <ImageBrush/>
                    </Button.Background>
                </Button>

                <!-- Admin Button -->
                <Button Name="EditButton" Content="Paw Center" Height="50" Width="250" Margin="0,10"
                        HorizontalAlignment="Center" Click="EditButton_Click"
                        FontWeight="Bold" BorderBrush="#FF7996B5" Background="#FFB1BFCE" Grid.Row="5"/>
            </Grid>
        </Border>
    </Grid>
</Window>
