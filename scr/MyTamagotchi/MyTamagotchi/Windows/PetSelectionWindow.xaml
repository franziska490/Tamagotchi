<Window x:Class="MyTamagotchi.PetSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Pet"
        WindowState="Maximized"
        Width="1000" Height="500"
        MinWidth="400" MinHeight="400"
        Background="#FFAFCDD4"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,80,0,0">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Width="800" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- X & Header -->
                    <RowDefinition Height="*"/>
                    <!-- Pet List -->
                    <RowDefinition Height="Auto"/>
                    <!-- Starter Header -->
                    <RowDefinition Height="Auto"/>
                    <!-- Seal Button -->
                    <RowDefinition Height="Auto"/>
                    <!-- Penguin Button -->
                    <RowDefinition Height="Auto"/>
                    <!-- Settings Header -->
                    <RowDefinition Height="Auto"/>
                    <!-- Edit Button -->
                </Grid.RowDefinitions>

                <!-- Button: Close -->
                <Button Content="X" Width="40" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Margin="0,0,0,10" Click="CancelButton_Click" Background="#FFAC4646" />

                <!-- Header: Saved Pets -->
                <TextBlock Text="Saved Pets:" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Left" Margin="10,5,0,5" Grid.Row="0"/>

                <!-- List of Saved Pets -->
                <ListBox Name="PetListBox" Grid.Row="1" Margin="0,0,0,10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding ImageSourcePath}" Width="50" Height="50" Margin="5"/>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="16" />
                                </StackPanel>
                                <Button Content="X" Grid.Column="1" 
                                        Width="20" Height="20" Margin="10"
                                        Tag="{Binding}" 
                                        Click="DeleteButton_Click"
                                        Background="Red" Foreground="White" FontWeight="Bold"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Header: Starter Pet -->
                <TextBlock Text="Starter Pet" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,19,0,19" Grid.Row="3"/>

                <!-- Button: Chubby Seal -->
                <Button Name="SealButton" Content="Chubby Seal" Height="50" Grid.Row="3"
                        Margin="40,10,0,10" HorizontalAlignment="Left" Width="250"
                        Click="SealButton_Click"/>

                <!-- Button: Penguin -->
                <Button Name="PenguinButton" Content="Penguin" Height="50" Grid.Row="3"
                        Margin="511,5,0,15" HorizontalAlignment="Left" Width="250"
                        Click="PenguinButton_Click"/>

                <!-- Header: Change Settings -->
                <TextBlock Text="Change Settings:" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Left" Margin="-53,148,0,-110" Grid.Row="6"/>

                <!-- Button: Edit -->
                <Button Name="EditButton" Content="Edit" Height="50" Grid.Row="6"
                        Margin="150,139,0,-119" HorizontalAlignment="Left" Width="250"
                        Click="EditButton_Click"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
