<Window x:Class="MyTamagotchi.PetSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Pet" WindowState="Maximized" MinWidth="400" MinHeight="400" Background="#FFAFCDD4">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button Content="Cancel" Width="120" Height="40" Margin="10" FontSize="14" Click="CancelButton_Click"/>
        <!-- Header: Saved Pets -->
        <TextBlock Text="Saved Pets:" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,10" Grid.Row="0"/>
        <!-- List of Saved Pets -->
        <ListBox Name="PetListBox" Grid.Row="1" Margin="0,0,0,20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <!-- Header: Starter Pet -->
        <TextBlock Text="Starter Pet:" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,5" Grid.Row="2"/>
        <!-- Button: Select Starter Pet -->
        <Button Name="SealButton" Content="Chubby Seal" Width="250" Height="50" Margin="0,0,0,20" Grid.Row="3" HorizontalAlignment="Center" Click="SealButton_Click"/>
        <!-- Header: Change Settings -->
        <TextBlock Text="Change Settings:" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,5" Grid.Row="4"/>
        <!-- Button: Edit Settings -->
        <Button Name="EditButton" Content="Edit" Width="250" Height="50" Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Top" Click="EditButton_Click"/>

    </Grid>

</Window>