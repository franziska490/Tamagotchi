<Window x:Class="MyTamagotchi.PetSelectionWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Status" Height="300" Width="300">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Name="HungerStatusText" Text="Hunger: 100" FontSize="16" Margin="0,10,0,10"/>
            <TextBlock Name="EnergyStatusText" Text="Energie: 100" FontSize="16" Margin="0,10,0,10"/>
            <TextBlock Name="MoodStatusText" Text="Stimmung: 100" FontSize="16" Margin="0,10,0,10"/>

            <Button Content="Aktualisieren" Margin="0,20,0,0" Height="30" Click="UpdateStatusButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
