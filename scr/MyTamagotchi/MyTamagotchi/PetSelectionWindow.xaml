<Window x:Class="MyTamagotchi.PetSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Pet" WindowState="Maximized" MinWidth="400" MinHeight="400" Background="#FFAFCDD4">
    <Grid Margin="20">
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- X & Header -->
            <RowDefinition Height="*"/>
            <!-- Pet List -->
            <RowDefinition Height="Auto"/>
            <!-- Starter Header -->
            <RowDefinition Height="Auto"/>
            <!-- Seal Button -->
            <RowDefinition Height="Auto"/>
            <!-- Penguin Button -->
            <RowDefinition Height="Auto"/>
            <!-- Settings Header -->
            <RowDefinition Height="Auto"/>
            <!-- Edit Button -->
        </Grid.RowDefinitions>

        <!-- Button: Close -->
        <Button Content="X" Width="40" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,0,0,10" Click="CancelButton_Click" Background="#FFAC4646" />

        <!-- Header: Saved Pets -->
        <TextBlock Text="Saved Pets:" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,5" Grid.Row="0"/>

        <!-- List of Saved Pets -->
        <!-- List of Saved Pets mit Bild -->
        <ListBox Name="PetListBox" Grid.Row="1" Margin="0,0,0,37" Grid.RowSpan="2"
         SelectionChanged="PetListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Image Source="{Binding ImageSourcePath}" Width="50" Height="50" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding Name}" FontSize="18" VerticalAlignment="Center" FontWeight="Bold"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


        <!-- Header: Starter Pet -->
        <TextBlock Text="Starter Pet:" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,5" Grid.Row="2"/>

        <!-- Button: Chubby Seal -->
        <Button Name="SealButton" Content="Chubby Seal" Height="50" Grid.Row="3"
                Margin="0,10" HorizontalAlignment="Center" Width="250"
                Click="SealButton_Click"/>

        <!-- Button: Penguin -->
        <Button Name="PenguinButton" Content="Penguin" Height="50" Grid.Row="4"
                Margin="0,0,0,10" HorizontalAlignment="Center" Width="250"
                Click="PenguinButton_Click"/>

        <!-- Header: Change Settings -->
        <TextBlock Text="Change Settings:" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,5" Grid.Row="5"/>

        <!-- Button: Edit -->
        <Button Name="EditButton" Content="Edit" Height="50" Grid.Row="6"
                Margin="0,10" HorizontalAlignment="Center" Width="250"
                Click="EditButton_Click"/>

    </Grid>
</Window>
