<Window x:Class="MyTamagotchi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Tamagotchi" Height="500" Width="400">
    <Viewbox Stretch="Uniform">
        <Viewbox.OpacityMask>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF773D3D" Offset="1"/>
            </LinearGradientBrush>
        </Viewbox.OpacityMask>
        <Grid Width="400" Height="500" Margin="20">
            <Grid.Background>
                <ImageBrush ImageSource="/Ice_floating.png"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Image Name="PetImage" 
                   Source="/Assets/seal_happy.png" 
                   Width="150" Height="150" 
                   HorizontalAlignment="Center" Grid.Row="0" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="0,10,0,10">
                <Button Content="Nom" Width="75" Margin="5" Click="FeedButton_Click" Height="24">
                    <Button.Background>
                        <ImageBrush ImageSource="/Assets/fibsh.png" Opacity="1" Stretch="UniformToFill">
                            <ImageBrush.RelativeTransform>
                                <TransformGroup>
                                    <ScaleTransform CenterY="0.5" CenterX="0.5" ScaleX="1"/>
                                    <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                    <RotateTransform CenterX="0.5" CenterY="0.5" Angle="0"/>
                                    <TranslateTransform X="0"/>
                                </TransformGroup>
                            </ImageBrush.RelativeTransform>
                        </ImageBrush>
                    </Button.Background>
                </Button>
                <Button Content="Sleep" Width="80" Margin="5" Click="SleepButton_Click"/>
                <Button Content="Play" Width="80" Margin="5" Click="PlayButton_Click"/>

            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,20,0,0">
                <!-- Hunger -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5,0,0">
                    <TextBlock Text="Hungry:" FontWeight="Bold" Width="50"/>
                    <ProgressBar Name="HungerBar" Width="300" Height="20" Maximum="100" Value="100"/>
                    <TextBlock Name="HungerValue" Width="40" Text="100%" FontWeight="Bold" HorizontalAlignment="Right"/>
                </StackPanel>

                <!-- Energy -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="Energy:" FontWeight="Bold" Width="50"/>
                    <ProgressBar Name="EnergyBar" Width="300" Height="20" Maximum="100" Value="100"/>
                    <TextBlock Name="EnergyValue" Width="40" Text="100%" FontWeight="Bold" HorizontalAlignment="Right"/>
                </StackPanel>

                <!-- Mood -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="Mood:" FontWeight="Bold" Width="50"/>
                    <ProgressBar Name="MoodBar" Width="300" Height="20" Maximum="100" Value="100"/>
                    <TextBlock Name="MoodValue" Width="40" Text="100%" FontWeight="Bold" HorizontalAlignment="Right"/>
                </StackPanel>
            </StackPanel>


            <Button Content="Save" Grid.Row="4" Height="30" Margin="0,-20,210,0" Click="SaveButton_Click"/>
            <Button Content="Back" Grid.Row="4" Height="30"  Margin="210,-20,0,0" Click="BackButton_Click"/>

        </Grid>
    </Viewbox>
</Window>
