<Window x:Class="MyTamagotchi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTamagotchi"
        mc:Ignorable="d"
        Title="Mein Tamagotchi" Height="500" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Name="PetImage" Source="https://via.placeholder.com/150" 
               Width="150" Height="150" HorizontalAlignment="Center" Grid.Row="0" Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="0,10,0,10">
            <Button Content="Füttern" Width="80" Margin="10" Click="FeedButton_Click"/>
            <Button Content="Spielen" Width="80" Margin="10" Click="PlayButton_Click"/>
            <Button Content="Schlafen" Width="80" Margin="10" Click="SleepButton_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <TextBlock Text="Hunger" Margin="0,5,0,0"/>
            <ProgressBar Name="HungerBar" Height="20" Value="100" Maximum="100"/>
            <TextBlock Text="Energie" Margin="0,10,0,0"/>
            <ProgressBar Name="EnergyBar" Height="20" Value="100" Maximum="100"/>
            <TextBlock Text="Stimmung" Margin="0,10,0,0"/>
            <ProgressBar Name="MoodBar" Height="20" Value="100" Maximum="100"/>
        </StackPanel>

        <Button Content="Status anzeigen" Grid.Row="3" Height="30" Margin="0,20,0,0" Click="ShowStatusButton_Click"/>
    </Grid>
</Window>
