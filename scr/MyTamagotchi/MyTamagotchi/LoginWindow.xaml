<Window x:Class="MyTamagotchi.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:MyTamagotchi"
    mc:Ignorable="d"
    Title="Login" Height="300" Width="300">
    <StackPanel Margin="20">

        <TextBlock Text="Benutzername:"/>
        <TextBox Name="UsernameBox" Margin="0,5,0,10"/>

        <TextBlock Text="Passwort:"/>
        <PasswordBox Name="PasswordBox" Margin="0,5,0,20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Login" Width="100" Margin="5" Click="LoginButton_Click"/>
            <Button Content="Registrieren" Width="100" Margin="5" Click="RegisterButton_Click"/>
        </StackPanel>

    </StackPanel>
</Window>

